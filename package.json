{
  "name": "flatme",
  "version": "1.0.0",
  "description": "A flatmate management app",
  "scripts": {
    "coverage": "jest --coverage",
    "dev": "webpack --progress --watch | nodemon src/server",
    "knex": "knex",
    "migrate": "knex migrate:latest",
    "start": "node src/server",
    "test": "standard && jest",
    "webpack": "webpack --progress",
    "postinstall": "webpack && npm run migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kowhai-2016/flatme.git"
  },
  "keywords": [],
  "author": "Kowhai 2016",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kowhai-2016/flatme/issues"
  },
  "homepage": "https://github.com/kowhai-2016/flatme#readme",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.16.0",
    "css-loader": "^0.26.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "jsonwebtoken": "^7.2.1",
    "knex": "^0.12.6",
    "multiparty": "^4.1.3",
    "pg": "^6.1.2",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.7",
    "react-bootstrap-validation": "^0.1.11",
    "react-dom": "^15.4.2",
    "react-draggable": "^2.2.3",
    "react-redux": "^5.0.2",
    "react-redux-form": "^1.5.4",
    "react-router": "^3.0.2",
    "react-router-bootstrap": "^0.23.1",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "sqlite3": "^3.1.8",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "babel-preset-stage-0": "^6.22.0",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.5",
    "jest": "^18.1.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "standard": "^8.6.0",
    "supertest": "^3.0.0",
    "webpack-dev-server": "^2.3.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(ico|svg)$": "<rootDir>/test/__mocks__/file.js",
      "\\.css$": "<rootDir>/test/__mocks__/style.js"
    },
    "setupFiles": [
      "<rootDir>test/__mocks__/localStorage.js"
    ]
  }
}
